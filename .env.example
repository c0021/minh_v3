# MinhOS v3 Environment Configuration
# ===================================

# Environment
MINHOS_ENV=dev

# Sierra Chart Bridge (Tailscale)
SIERRA_HOST=trading-pc
SIERRA_PORT=8765
SIERRA_TIMEOUT=30

# Database
DATABASE_URL=sqlite:///./data/minhos.db
# DATABASE_URL=postgresql://minhos:minhos_dev_pass@localhost:5432/minhos

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# WebSocket
WS_HOST=0.0.0.0
WS_PORT=9001

# Trading Configuration
MAX_POSITION_SIZE=100000.0
MAX_DAILY_LOSS=5000.0
MAX_DRAWDOWN=10000.0
ENABLE_PAPER_TRADING=true
DEFAULT_SYMBOL=NQ

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/minhos.log

# Security (for production)
# SECRET_KEY=your_secret_key_here
# API_KEYS=key1,key2,key3

# Optional: External Services
# OPENAI_API_KEY=your_openai_key
# TELEGRAM_BOT_TOKEN=your_telegram_token
# DISCORD_WEBHOOK=your_discord_webhook

# Optional: Database Connection Pool
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=40

# Optional: Performance Tuning
# WORKER_PROCESSES=1
# MAX_CONNECTIONS=1000
# CACHE_TTL=300